<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55.0dp"
        android:id="@+id/infoLabel" />
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:text="Biliary Track Infection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/biliary" />
        <RadioButton
            android:text="Diverticulitis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/diverticulitis" />
        <RadioButton
            android:text="Pancreatitis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pancreatitis" />
        <RadioButton
            android:text="Peritonitis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/peritonitis" />
    </RadioGroup>
</LinearLayout>